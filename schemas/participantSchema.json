{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
      "participant",
      "work",
      "home"
  ],
  "additionalProperties": false,
  "properties": {
      "participant": {
          "type": "object",
          "required": [
              "email",
              "firstname",
              "lastname",
              "dob"
          ],
          "additionalProperties": false,
          "properties": {
              "email": {
                  "type": "string",
                  "format": "email"
              },
              "firstname": {
                  "type": "string",
                  "minLength": 1
              },
              "lastname": {
                  "type": "string",
                  "minLength": 1
              },
              "dob": {
                  "type": "string",
                  "pattern": "^\\d{4}/\\d{2}/\\d{2}$"
              }
          }
      },
      "work": {
          "type": "object",
          "required": [
              "companyname",
              "salary",
              "currency"
          ],
          "additionalProperties": false,
          "properties": {
              "companyname": {
                  "type": "string",
                  "minLength": 1
              },
              "salary": {
                  "type": "number",
                  "minimum": 0
              },
              "currency": {
                  "type": "string",
                  "pattern": "^[A-Z]{3}$"
              }
          }
      },
      "home": {
          "type": "object",
          "required": [
              "country",
              "city"
          ],
          "additionalProperties": false,
          "properties": {
              "country": {
                  "type": "string",
                  "minLength": 1
              },
              "city": {
                  "type": "string",
                  "minLength": 1
              }
          }
      }
  }
}